<link rel="stylesheet" href="~/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/css/Personal.css" rel="stylesheet" />
@model Hackathon.Model.RepositoryServiceViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>RepositoryService</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ServiceClusterName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ServiceClusterName" class="form-control" />
                <span asp-validation-for="ServiceClusterName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ServiceClusterId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ServiceClusterId" class="form-control" />
                <span asp-validation-for="ServiceClusterId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AppImportFolder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AppImportFolder" class="form-control" />
                <span asp-validation-for="AppImportFolder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="UseRuleTrace" />
                    <label asp-for="UseRuleTrace"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HostName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HostName" class="form-control" />
                <span asp-validation-for="HostName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModifiedByUserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ModifiedByUserName" class="form-control" />
                <span asp-validation-for="ModifiedByUserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IdentifiedInternally" />
                    <label asp-for="IdentifiedInternally"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
